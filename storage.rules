rules_version = '2';

// Regras para permitir upload de currículos
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir upload na pasta curriculos
    match /curriculos/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Bloquear outras pastas por segurança
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
